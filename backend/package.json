{
    "name": "connect-four-backend",
    "version": "1.0.0",
    "scripts": {
        "start:dev": "node --expose-gc --max-old-space-size=512 --optimize-for-size node_modules/.bin/nest start --watch",
        "build": "nest build",
        "start:prod": "node --expose-gc --max-old-space-size=512 --optimize-for-size dist/main.js",
        "start": "npm run start:prod",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "dependencies": {
        "@nestjs/cli": "^11.0.7",
        "@nestjs/common": "^11.1.3",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.1.3",
        "@nestjs/event-emitter": "^3.0.1",
        "@nestjs/platform-express": "^11.1.3",
        "@nestjs/platform-socket.io": "^11.1.3",
        "@nestjs/schedule": "^6.0.0",
        "@nestjs/typeorm": "^11.0.0",
        "@nestjs/websockets": "^11.1.3",
        "@tensorflow/tfjs": "^4.22.0",
        "axios": "^1.8.4",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "cli-progress": "^3.12.0",
        "express": "^4.18.2",
        "node-fetch": "^2.7.0",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.2",
        "socket.io": "^4.0.0",
        "typeorm": "^0.3.25",
        "@nestjs/axios": "^4.0.1",
        "@nestjs/platform-express": "^11.1.3",
        "multer": "^1.4.5-lts.1",
        "uuid": "^10.0.0",
        "semver": "^7.6.3"
    },
    "devDependencies": {
        "@types/node": "^18.0.0",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.8",
        "@types/serve-static": "^1.15.7",
        "@types/multer": "^1.4.11",
        "@types/uuid": "^10.0.0",
        "@types/ws": "^8.5.3",
        "@types/semver": "^7.5.8",
        "jest": "^29.7.0",
        "run-script-webpack-plugin": "^0.2.0",
        "ts-jest": "^29.1.1",
        "typescript": "^4.9.0"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test"
        ],
        "testMatch": [
            "**/*.spec.ts"
        ],
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "setupFilesAfterEnv": [
            "<rootDir>/test/setup.ts"
        ],
        "moduleFileExtensions": [
            "ts",
            "js",
            "json"
        ],
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/**/*.d.ts"
        ],
        "testTimeout": 30000
    },
    "optionalDependencies": {
        "onnxruntime-node": "^1.21.1"
    }
}