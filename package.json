{
  "name": "connect-four-monorepo",
  "private": true,
  "scripts": {
    "start": "./smart-start-parallel.sh",
    "start:legacy": "./smart-start.sh",
    "start:parallel": "./smart-start-parallel.sh",
    "start:turbo": "node scripts/parallel-launcher.js start",
    "start:fast": "node scripts/parallel-launcher.js start --fast",
    "start:force": "./smart-start.sh --force-cleanup",
    "start:backend": "./smart-start.sh --backend-only",
    "start:frontend": "./smart-start.sh --frontend-only",
    "start:production": "./smart-start.sh --production",
    "start:follow": "./smart-start.sh --follow-logs",
    "dev": "./smart-start-parallel.sh",
    "dev:turbo": "node scripts/parallel-launcher.js start",
    "dev:fast": "node scripts/parallel-launcher.js start --fast",
    "dev:clean": "./smart-start.sh --force-cleanup",
    "dev:logs": "./smart-start.sh --follow-logs",
    "stop": "./smart-stop-parallel.sh",
    "stop:legacy": "./port-manager.sh cleanup-force",
    "stop:parallel": "./smart-stop-parallel.sh",
    "stop:turbo": "node scripts/parallel-launcher.js stop",
    "stop:interactive": "./port-manager.sh cleanup",
    "stop:force": "./smart-stop-parallel.sh --force",
    "restart": "npm run stop && npm run start",
    "restart:turbo": "node scripts/parallel-launcher.js restart",
    "restart:fast": "node scripts/parallel-launcher.js restart --fast",
    "status": "./port-manager.sh status",
    "scan": "./port-manager.sh scan",
    "kill-port": "./port-manager.sh kill",
    "emergency": "./port-manager.sh emergency",
    "train": "./enhanced-pipeline.sh",
    "train:help": "./enhanced-pipeline.sh --help",
    "train:offline": "./enhanced-pipeline.sh offline",
    "train:continuous": "./enhanced-pipeline.sh continuous",
    "train:api": "./enhanced-pipeline.sh api",
    "demo": "./scripts/performance-demo.sh",
    "demo:all": "./scripts/performance-demo.sh all",
    "demo:modes": "./scripts/performance-demo.sh modes",
    "demo:languages": "./scripts/performance-demo.sh languages",
    "legacy:start:backend": "cd backend && npm install && npm run start:dev",
    "legacy:start:frontend": "cd frontend && npm install && npm run start",
    "legacy:dev": "concurrently \"npm run legacy:start:backend\" \"npm run legacy:start:frontend\"",
    "models:cleanup": "./scripts/model-management/advanced-model-cleanup.sh",
    "models:cleanup:dry": "./scripts/model-management/advanced-model-cleanup.sh --dry-run",
    "models:cleanup:force": "./scripts/model-management/advanced-model-cleanup.sh --force"
  },
  "dependencies": {
    "react-scripts": "^5.0.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/socket.io-client": "^1.4.36"
  }
}
